generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CarcacaFarol {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(255)
  description String?
  price       Float
  imageUrl    String?
  imgUrl1     String?
  imgUrl2     String?
  imgUrl3     String?
  createdat   DateTime? @default(now()) @db.Timestamp(6)
  updatedat   DateTime? @default(now()) @db.Timestamp(6)
}

model Lanterna {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(255)
  description String?
  price       Float
  imageUrl    String?
  imgUrl1     String?
  imgUrl2     String?
  imgUrl3     String?
  createdat   DateTime? @default(now()) @db.Timestamp(6)
  updatedat   DateTime? @default(now()) @db.Timestamp(6)
}

model LenteFarol {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(255)
  description String?
  price       Float
  imageUrl    String?
  imgUrl1     String?
  imgUrl2     String?
  imgUrl3     String?
  createdat   DateTime? @default(now()) @db.Timestamp(6)
  updatedat   DateTime? @default(now()) @db.Timestamp(6)
}

model LenteLanterna {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(255)
  description String?
  price       Float
  imageUrl    String?
  imgUrl1     String?
  imgUrl2     String?
  imgUrl3     String?
  createdat   DateTime? @default(now()) @db.Timestamp(6)
  updatedat   DateTime? @default(now()) @db.Timestamp(6)
}

model Product {
  id          Int         @id @default(autoincrement())
  title       String      @unique
  description String?
  price       Float
  imageUrl    String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  imgUrl1     String?
  imgUrl2     String?
  imgUrl3     String?
  orderItems  OrderItem[]
}

model MenuCard {
  id        Int      @id @default(autoincrement())
  title     String
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MenuToolsButton {
  id        Int       @id @default(autoincrement())
  title     String
  imageUrl  String
  createdAt DateTime? @default(now()) @db.Timestamp(6)
  updatedAt DateTime? @default(now()) @updatedAt @db.Timestamp(6)
}

model SlidlabelTool {
  id        Int       @id @default(autoincrement())
  title     String
  imageUrl  String
  createdAt DateTime? @default(now()) @db.Timestamp(6)
  updatedAt DateTime? @default(now()) @updatedAt @db.Timestamp(6)
}

model Order {
  id            Int         @id @default(autoincrement())
  email         String      @db.VarChar(255)
  total         Decimal     @db.Decimal(10, 2)
  paymentmethod String      @db.VarChar(50)
  paymentstatus String      @default("pending") @db.VarChar(50)
  createdAt     DateTime    @default(now()) @db.Timestamp(6)
  updatedAt     DateTime    @default(now()) @updatedAt @db.Timestamp(6)
  items         OrderItem[]
  payment       payment?
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  orderId   Int
  productId Int?
  title     String   @db.VarChar(255)
  price     Decimal  @db.Decimal(10, 2)
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  product   Product? @relation(fields: [productId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model payment {
  id            Int       @id @default(autoincrement())
  orderid       Int       @unique
  method        String    @db.VarChar(255)
  status        String?   @default("pending") @db.VarChar(50)
  paymentid     String?   @db.VarChar(255)
  qrcode        String?
  qrcodebase64  String?
  transactionid String?   @db.VarChar(255)
  pixexpiresat  DateTime? @db.Timestamp(6)
  createdat     DateTime? @default(now()) @db.Timestamp(6)
  Order         Order     @relation(fields: [orderid], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_order")
}
